<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/main_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="#cccccc"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x80"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tab_index"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@drawable/selector_tab_main_bottom_index"
            android:gravity="center"
            android:text="首页"
            android:paddingTop="@dimen/y13"
            android:paddingBottom="@dimen/y13"
            android:textSize="11sp"
            android:background="@drawable/normal_white_pressed_gray"/>

        <TextView
            android:id="@+id/tab_classfy"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@drawable/selector_tab_main_bottom_classification"
            android:text="分类"
            android:gravity="center"
            android:paddingTop="@dimen/y13"
            android:paddingBottom="@dimen/y13"
            android:textSize="11sp"
            android:background="@drawable/normal_white_pressed_gray"/>

        <TextView
            android:id="@+id/tab_shopping_car"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@drawable/selector_tab_main_bottom_cart"
            android:gravity="center"
            android:paddingTop="@dimen/y13"
            android:paddingBottom="@dimen/y13"
            android:textSize="11sp"
            android:text="购物车"
            android:background="@drawable/normal_white_pressed_gray"/>

        <TextView
            android:id="@+id/tab_mine"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@drawable/selector_tab_main_bottom_mine"
            android:gravity="center"
            android:paddingTop="@dimen/y13"
            android:paddingBottom="@dimen/y13"
            android:textSize="11sp"
            android:text="我的"
            android:background="@drawable/normal_white_pressed_gray"/>


    </LinearLayout>

</LinearLayout>
