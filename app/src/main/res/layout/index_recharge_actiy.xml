<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f1f1f1"
    android:orientation="vertical">


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/y20"
        android:background="#cccccc" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/x20"
            android:gravity="center_vertical"
            android:text="充值金额" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_margin="20dp"
            android:background="#cccccc" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:hint="请输入充值金额"
            android:textColor="@null"
            android:textSize="@dimen/x16"
            />

    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#cccccc" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x20"
        android:layout_marginTop="@dimen/y10"
        android:text="温馨提示：充值金额在1元与1万元之间"
        android:textColor="#ff7800"
        android:textSize="@dimen/x16"
        />

    <GridView
        android:id="@android:id/list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/y10"
        android:layout_marginTop="@dimen/y30"
        android:horizontalSpacing="@dimen/x20"
        android:listSelector="@color/transparent"
        android:numColumns="4"
        android:paddingLeft="@dimen/x30"
        android:paddingRight="@dimen/x30"
        android:scrollbars="none"
        android:verticalSpacing="@dimen/y20">

    </GridView>


    <cn.zero.android.common.view.FButton
        android:id="@+id/recharge_next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/x20"
        android:text="下一步"
        android:textColor="@color/white"
        android:textSize="@dimen/x22"
        app:buttonColor="#72C63C"
        app:cornerRadius="5dp"
        app:shadowEnabled="false" />


</LinearLayout>
