<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/y68"
    android:layout_marginLeft="-1dp"
    android:background="@drawable/classify_normal_bg"
    android:orientation="vertical">


    <TextView
        android:id="@+id/listitem_classification_left_text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="新鲜水果"
        android:textColor="#a6ca59"
        android:textSize="16sp" />

    <View
        android:id="@+id/listitem_classification_left_flag"
        android:layout_width="@dimen/x6"
        android:layout_height="match_parent"
        android:background="#a6ca59"
        android:visibility="gone" />
</RelativeLayout>
