<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/normal_white_pressed_gray">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/x15"
        android:paddingLeft="@dimen/x20"
        android:paddingRight="@dimen/x20"
        android:paddingTop="@dimen/x15"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/listitem_address_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/flag_address_name"
                android:drawablePadding="@dimen/x10"
                android:text="person    name"
                android:textColor="#4d4d4d"
                android:textSize="@dimen/x18" />

            <TextView
                android:id="@+id/listitem_address_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x80"
                android:drawableLeft="@drawable/flag_address_phone"
                android:drawablePadding="@dimen/x10"
                android:text="18393358049"
                android:textColor="#4d4d4d"
                android:textSize="@dimen/x18" />
        </LinearLayout>

        <TextView
            android:id="@+id/listitem_address_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y12"
            android:lineSpacingExtra="2dp"
            android:text="天津市，红桥区，新三条石大街，金领国际，10栋"
            android:textColor="#808080"
            android:textSize="@dimen/x16" />
    </LinearLayout>

    <ImageView
        android:id="@+id/listitem_address_default"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:src="@drawable/address_default"
        android:background="@color/transparent"/>

</FrameLayout>
