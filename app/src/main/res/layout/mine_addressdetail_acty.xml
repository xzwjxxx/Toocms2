<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x70"
        android:background="#ffffff">

        <ImageView
            android:id="@+id/back"
            android:layout_width="@dimen/x70"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:background="@drawable/normal_white_pressed_gray"
            android:padding="@dimen/x20"
            android:src="@drawable/ic_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="添加地址"
            android:textSize="@dimen/x25" />

        <TextView
            android:id="@+id/mine_feedback_submit"
            android:layout_width="@dimen/x70"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@drawable/normal_white_pressed_gray"
            android:gravity="center"
            android:text="确定"
            android:textSize="@dimen/x20" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/y2"
        android:background="#cccccc" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingLeft="@dimen/x20"
        android:paddingRight="@dimen/x20">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y60"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="姓名:"
                android:textColor="#999999"
                android:textSize="@dimen/x18" />

            <EditText
                android:id="@+id/address_name_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x20"
                android:background="@color/transparent"
                android:singleLine="true"
                android:textColor="#4d4d4d"
                android:textSize="@dimen/x18" />
        </LinearLayout>

        <View style="@style/divider" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y60"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="手机:"
                android:textColor="#999999"
                android:textSize="@dimen/x18" />

            <EditText
                android:id="@+id/address_phone_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x20"
                android:background="@color/transparent"
                android:inputType="phone"
                android:singleLine="true"
                android:textColor="#4d4d4d"
                android:textSize="@dimen/x18" />
        </LinearLayout>

        <View style="@style/divider" />

        <LinearLayout
            android:id="@+id/address_detail_address"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y60"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:background="@drawable/normal_white_pressed_gray">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="地址:"
                android:textColor="#999999"
                android:textSize="@dimen/x18" />

            <EditText
                android:id="@+id/address_address_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x20"
                android:background="@color/transparent"
                android:drawablePadding="@dimen/x10"
                android:gravity="right"
                android:textColor="#4d4d4d"
                android:textSize="@dimen/x18"
                android:layout_weight="1"/>

            <ImageView
                android:id="@+id/address_address_map"
                android:layout_width="@dimen/x60"
                android:layout_height="@dimen/y60"
                android:src="@drawable/mine_head_right"
                android:paddingLeft="@dimen/x20"
                android:paddingTop="@dimen/x20"
                android:paddingBottom="@dimen/x20"/>

        </LinearLayout>

        <View style="@style/divider" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y60"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="门牌号:"
                android:textColor="#999999"
                android:textSize="@dimen/x18" />

            <EditText
                android:id="@+id/address_doornumber_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x20"
                android:background="@color/transparent"
                android:maxLines="2"
                android:textColor="#4d4d4d"
                android:textSize="@dimen/x18" />
        </LinearLayout>

        <View style="@style/divider" />

        <CheckBox
            android:id="@+id/address_checked_default"
            style="@style/style_cbox"
            android:layout_height="@dimen/y60"
            android:drawableLeft="@drawable/selector_cart_cbox"
            android:text="设为默认地址"
            android:textColor="#4d4d4d"
            android:textSize="@dimen/x18" />
    </LinearLayout>


</LinearLayout>
