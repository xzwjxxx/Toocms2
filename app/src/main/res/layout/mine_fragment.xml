<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#f5f5f5"
    android:orientation="vertical">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#f5f5f5"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/y280"
                android:background="@drawable/mine_headbg">

                <ImageView
                    android:id="@+id/mine_setting"
                    android:layout_width="@dimen/x40"
                    android:layout_height="@dimen/x40"
                    android:layout_alignParentRight="true"
                    android:layout_margin="10dp"
                    android:src="@drawable/mine_setting_ic" />

                <TextView
                    android:id="@+id/mine_head_normal"
                    android:layout_width="@dimen/x110"
                    android:layout_height="@dimen/x110"
                    android:layout_centerInParent="true"
                    android:background="@drawable/mine_head_normal"
                    android:gravity="center"
                    android:text="登录/注册"
                    android:textColor="@color/white"
                    android:textSize="@dimen/x16"/>


                <RelativeLayout
                    android:id="@+id/mine_head_layout"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y280">


                    <cn.zero.android.common.view.RoundedImageView
                        android:id="@+id/mine_head_image"
                        android:layout_width="@dimen/x110"
                        android:layout_height="@dimen/x110"
                        android:layout_centerInParent="true"
                        android:background="@drawable/mine_head_normal"
                        android:gravity="center"
                        android:scaleType="centerCrop" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="@dimen/x15"
                        android:layout_toRightOf="@id/mine_head_image"
                        android:src="@drawable/mine_head_right" />

                    <TextView
                        android:id="@+id/mine_nick_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/mine_head_image"
                        android:layout_marginTop="@dimen/y10"
                        android:text="行者无疆"
                        android:textColor="#333333"
                        android:textSize="@dimen/x16"
                        android:layout_centerHorizontal="true"/>

                </RelativeLayout>

            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/y92"
                android:layout_marginBottom="@dimen/y20"
                android:layout_marginLeft="@dimen/x15"
                android:layout_marginRight="@dimen/x15"
                android:layout_marginTop="@dimen/y20"
                android:background="@color/white"
                android:orientation="horizontal"
                android:padding="1dp">

                <com.toocms.view.DrawableTopCenterTextView
                    android:id="@+id/mine_daifukuan"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/normal_white_pressed_gray"
                    android:drawablePadding="@dimen/y10"
                    android:drawableTop="@drawable/mine_daifukuan"
                    android:gravity="center_horizontal"
                    android:text="待付款"
                    android:textColor="#4d4d4d"
                    android:textSize="@dimen/x14" />

                <com.toocms.view.DrawableTopCenterTextView
                    android:id="@+id/mine_daijiedan"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/normal_white_pressed_gray"
                    android:drawablePadding="@dimen/y10"
                    android:drawableTop="@drawable/mine_daifukuan"
                    android:gravity="center_horizontal"
                    android:text="待接单"
                    android:textColor="#4d4d4d"
                    android:textSize="@dimen/x14" />

                <com.toocms.view.DrawableTopCenterTextView
                    android:id="@+id/mine_daifahuo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/normal_white_pressed_gray"
                    android:drawablePadding="@dimen/y10"
                    android:drawableTop="@drawable/mine_daifukuan"
                    android:gravity="center_horizontal"
                    android:text="待发货"
                    android:textColor="#4d4d4d"
                    android:textSize="@dimen/x14" />

                <com.toocms.view.DrawableTopCenterTextView
                    android:id="@+id/mine_peisongzhong"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/normal_white_pressed_gray"
                    android:drawablePadding="@dimen/y10"
                    android:drawableTop="@drawable/mine_daifukuan"
                    android:gravity="center_horizontal"
                    android:text="配送中"
                    android:textColor="#4d4d4d"
                    android:textSize="@dimen/x14" />


            </LinearLayout>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/y20"
                android:layout_marginLeft="@dimen/x15"
                android:layout_marginRight="@dimen/x15"
                android:background="#e7e7e7"
                android:orientation="vertical"
                android:padding="1dp">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.toocms.view.DrawableTopCenterTextView
                        android:id="@+id/mine_order"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/y120"
                        android:layout_weight="1"
                        android:background="@drawable/normal_white_pressed_gray"
                        android:drawablePadding="@dimen/y15"
                        android:drawableTop="@drawable/mine_myorder"
                        android:gravity="center_horizontal"
                        android:text="我的订单"
                        android:textColor="#4d4d4d"
                        android:textSize="@dimen/x18" />

                    <com.toocms.view.DrawableTopCenterTextView
                        android:id="@+id/mine_wallet"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/y120"
                        android:layout_marginLeft="1dp"
                        android:layout_marginRight="1dp"
                        android:layout_weight="1"
                        android:background="@drawable/normal_white_pressed_gray"
                        android:drawablePadding="@dimen/y15"
                        android:drawableTop="@drawable/mine_mywallet"
                        android:gravity="center_horizontal"
                        android:text="我的钱包"
                        android:textColor="#4d4d4d"
                        android:textSize="@dimen/x18" />

                    <com.toocms.view.DrawableTopCenterTextView
                        android:id="@+id/mine_address"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/y120"
                        android:layout_weight="1"
                        android:background="@drawable/normal_white_pressed_gray"
                        android:drawablePadding="@dimen/y15"
                        android:drawableTop="@drawable/mine_myaddress"
                        android:gravity="center_horizontal"
                        android:text="收货地址"
                        android:textColor="#4d4d4d"
                        android:textSize="@dimen/x18" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.toocms.view.DrawableTopCenterTextView
                        android:id="@+id/mine_collect"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/y120"
                        android:layout_marginTop="1dp"
                        android:layout_weight="1"
                        android:background="@drawable/normal_white_pressed_gray"
                        android:drawablePadding="@dimen/y15"
                        android:drawableTop="@drawable/mine_mycollect"
                        android:gravity="center_horizontal"
                        android:text="我的收藏"
                        android:textColor="#4d4d4d"
                        android:textSize="@dimen/x18" />

                    <com.toocms.view.DrawableTopCenterTextView
                        android:id="@+id/mine_coupon"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/y120"
                        android:layout_marginLeft="1dp"
                        android:layout_marginRight="1dp"
                        android:layout_marginTop="1dp"
                        android:layout_weight="1"
                        android:background="@drawable/normal_white_pressed_gray"
                        android:drawablePadding="@dimen/y15"
                        android:drawableTop="@drawable/mine_mycoupon"
                        android:gravity="center_horizontal"
                        android:text="优惠券"
                        android:textColor="#4d4d4d"
                        android:textSize="@dimen/x18">

                    </com.toocms.view.DrawableTopCenterTextView>

                    <com.toocms.view.DrawableTopCenterTextView
                        android:id="@+id/mine_feedback"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/y120"
                        android:layout_marginTop="1dp"
                        android:layout_weight="1"
                        android:background="@drawable/normal_white_pressed_gray"
                        android:drawablePadding="@dimen/y15"
                        android:drawableTop="@drawable/mine_myfeedback"
                        android:gravity="center_horizontal"
                        android:text="意见反馈"
                        android:textColor="#4d4d4d"
                        android:textSize="@dimen/x18">

                    </com.toocms.view.DrawableTopCenterTextView>
                </TableRow>


            </TableLayout>


        </LinearLayout>

    </ScrollView>


</LinearLayout>
