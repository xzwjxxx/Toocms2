<?xml version="1.0" encoding="utf-8"?>
<com.toocms.view.TouchLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingLeft="@dimen/x20"
        android:paddingRight="@dimen/x20"
        android:background="#ffffff">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y50"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/myorder_order_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="订单xxxxxxxxxxxxx"
                android:textColor="#333333"
                android:textSize="@dimen/x16" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="待付款"
                android:textColor="#e11a1a"
                android:textSize="@dimen/x16" />
        </LinearLayout>

        <View
            style="@style/divider"
            android:background="#cccccc" />

        <cn.zero.android.common.view.linearlistview.LinearListView
            android:id="@+id/linear_listview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        </cn.zero.android.common.view.linearlistview.LinearListView>

        <View
            style="@style/divider"
            android:background="#cccccc" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y60"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="合计："
                android:textColor="#4d4d4d"
                android:textSize="@dimen/x18" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥"
                android:textColor="#f46a04"
                android:textSize="@dimen/x18" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="59.80"
                android:textColor="#f46a04"
                android:textSize="@dimen/x24" />

            <TextView
                android:id="@+id/myorder_order_refund"
                android:layout_width="@dimen/x102"
                android:layout_height="@dimen/y42"
                android:background="@drawable/order_pay_bg"
                android:gravity="center"
                android:text="申请退款"
                android:textColor="#999999" />

            <TextView
                android:id="@+id/myorder_order_payment"
                android:layout_width="@dimen/x102"
                android:layout_height="@dimen/y42"
                android:layout_marginLeft="@dimen/x10"
                android:background="@drawable/order_pay_bg"
                android:gravity="center"
                android:text="立即支付"
                android:textColor="#72c63c" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/y20"
        android:background="#cccccc"/>

</com.toocms.view.TouchLinearLayout>