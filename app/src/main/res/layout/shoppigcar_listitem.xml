<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@drawable/normal_white_pressed_gray">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x10"
        android:background="#f1f1f1" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y110"
        android:gravity="center_vertical">


        <ImageView
            android:id="@+id/shopping_car_lititem_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_cart_cbox_normal"
            android:layout_marginLeft="@dimen/x20"/>
        
        <ImageView
            android:id="@+id/shopping_car_lititem_image"
            android:layout_width="@dimen/x74"
            android:layout_height="@dimen/y74"
            android:src="@drawable/index_recommend_image"
            android:layout_toRightOf="@id/shopping_car_lititem_checkbox"
            android:layout_centerVertical="true"
            android:background="#ebebeb"
            android:padding="1dp"
            android:scaleType="fitXY"
            android:layout_marginLeft="@dimen/x20"/>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/shopping_car_lititem_image"
            android:layout_toLeftOf="@+id/shopping_car_lititem_money"
            android:orientation="vertical"
            android:layout_margin="@dimen/x18">

            <TextView
                android:id="@+id/shopping_car_lititem_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="进口苹果"
                android:textSize="@dimen/x16"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:textColor="#333333"/>

            <TextView
                android:id="@+id/shopping_car_lititem_kg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="200g"
                android:textSize="@dimen/x14"
                android:gravity="center_vertical"
                android:textColor="#838383"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <LinearLayout
                android:id="@+id/shopping_cart_edit_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone">

                <ImageButton
                    android:id="@+id/listitem_cart_edit_reduce"
                    android:layout_width="@dimen/x38"
                    android:layout_height="@dimen/x30"
                    android:background="@drawable/bg_reduce"
                    android:src="@drawable/btn_reduce" />

                <TextView
                    android:id="@+id/listitem_cart_edit_num"
                    android:layout_width="@dimen/x38"
                    android:layout_height="@dimen/x30"
                    android:layout_marginLeft="-1dp"
                    android:layout_marginRight="-1dp"
                    android:background="@drawable/bg_num"
                    android:gravity="center"
                    android:text="2"
                    android:textColor="#333333"
                    android:textSize="@dimen/x16" />

                <ImageButton
                    android:id="@+id/listitem_cart_edit_plus"
                    android:layout_width="@dimen/x38"
                    android:layout_height="@dimen/x30"
                    android:background="@drawable/bg_plus"
                    android:src="@drawable/btn_plus" />
            </LinearLayout>
            <TextView
                android:id="@+id/shopping_car_item_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="x2"
                android:textSize="16px"
                android:gravity="center_vertical"/>
        </LinearLayout>

        <TextView
            android:id="@+id/shopping_car_lititem_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¥200"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/x18"
            android:textColor="#f46a04"/>

    </RelativeLayout>


</LinearLayout>
